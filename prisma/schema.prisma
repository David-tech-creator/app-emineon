  createdAt   DateTime  @default(now())
  candidates  Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  jobs        Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@unique([jobId, candidateId])
}

model assessments {
  id          String           @id
  candidateId String
