model ClientNotification {
  id              String   @id @default(cuid())
  clientId        String
  recipientEmail  String
  title           String
  message         String
  type            NotificationType @default(INFO)
  relatedResource String?  // "candidate:123", "job:456", etc.
  actionUrl       String?
  isRead          Boolean  @default(false)
  sentAt          DateTime?
  createdAt       DateTime @default(now())

  client          Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)

  @@map("client_notifications")
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
  ACTION_REQUIRED
}

model Client {
  id              String   @id @default(cuid())
  name            String
  industry        String?
  contactPerson   String?
  email           String?
  phone           String?
  address         String?
  logoUrl         String?
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Relations
  projects             Project[]
  jobs                 Job[]
  portalInvitations    ClientPortalInvitation[]
  comments             ClientComment[]
  assessmentRequirements ClientAssessmentRequirement[]
  interviewRequests    InterviewRequest[]
  activities           ClientActivity[]
  stages               PipelineStage[]
  notifications        ClientNotification[]

  @@map("clients")
}

model User {
  id                    String                     @id @default(cuid())
  email                 String                     @unique
  firstName             String
  lastName              String
  role                  String                     @default("user")
  isActive              Boolean                    @default(true)
  lastLoginAt           DateTime?
  createdAt             DateTime                   @default(now())
  updatedAt             DateTime                   @updatedAt
  clientCommentResponses ClientCommentResponse[]
  portalInvitations      ClientPortalInvitation[]
  assessments            CandidateAssessment[]
  interviewRequests      InterviewRequest[]

  @@map("users")
}

// Template models for distinguishing between job and competence file templates
model JobTemplate {
  id                String   @id @default(cuid())
  name              String
  description       String?
  category          String   // e.g., "Technology", "Finance", "Healthcare"
  industry          String?
  features          String[] // Template-specific features
  colorScheme       Json     // Color configuration
  styleConfig       Json     // Typography, layout, etc.
  sections          Json     // Section configuration
  sampleContent     Json?    // Sample job posting content
  isActive          Boolean  @default(true)
  isDefault         Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  createdBy         String?  // User ID who created the template
  
  @@map("job_templates")
}

model CompetenceFileTemplate {
  id                String   @id @default(cuid())
  name              String
  description       String?
  category          String   // e.g., "Modern Tech", "Executive", "Creative"
  industry          String?  // Target industry
  features          String[] // Template-specific features
  colorScheme       Json     // Color configuration
  styleConfig       Json     // Typography, layout, etc.
  sections          Json     // Section configuration for competence files
  isActive          Boolean  @default(true)
  isDefault         Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  createdBy         String?  // User ID who created the template
  
  // Relations to track usage
  competenceFiles   CompetenceFile[]
  
  @@map("competence_file_templates")
}

model CompetenceFile {
  id                String                   @id @default(cuid())
  candidateId       String
  templateId        String?
  fileName          String
  filePath          String
  downloadUrl       String
  format            String                   // 'pdf', 'docx', etc.
  fileSize          Int?
  status            CompetenceFileStatus     @default(DRAFT)
  version           Int                      @default(1)
  downloadCount     Int                      @default(0)
  isAnonymized      Boolean                  @default(false)
  metadata          Json?                    // Additional file metadata
  styleConfig       Json?                    // Custom styling used
  sectionsConfig    Json?                    // Sections configuration used
  logoUrl           String?
  createdAt         DateTime                 @default(now())
  updatedAt         DateTime                 @updatedAt
  generatedBy       String?                  // User ID who generated the file
  
  // Relations
  candidate         Candidate                @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  template          CompetenceFileTemplate?  @relation(fields: [templateId], references: [id], onDelete: SetNull)
  
  @@map("competence_files")
}

enum CompetenceFileStatus {
  DRAFT
  GENERATING
  READY
  ERROR
}

model EnrichmentJob {
  id             String   @id @default(cuid())
  candidateId    String
  candidate      Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  type           String   // 'summary' | 'skills' | 'experience' | 'areas-of-expertise' | etc.
  status         String   // 'pending' | 'in_progress' | 'completed' | 'error'
  startedAt      DateTime?
  completedAt    DateTime?
  result         Json?    // Store the enriched content
  error          String?  // Error message if failed
  retryCount     Int      @default(0)
  maxRetries     Int      @default(3)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  
  @@index([candidateId, type])
  @@index([status])
  @@map("enrichment_jobs")
}

// Resume Builder Models
model Resume {
  id     String @id @default(cuid())
  userId String

  title       String?
  description String?

  photoUrl    String?
  colorHex    String  @default("#000000")
  borderStyle String  @default("squircle")
  summary     String?
  firstName   String?
  lastName    String?
  jobTitle    String?
  city        String?
  country     String?
  phone       String?
  email       String?

  workExperiences WorkExperience[]
  educations      Education[]
  skills          String[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("resumes")
}

model WorkExperience {
  id String @id @default(cuid())

  position    String?
  company     String?
  startDate   DateTime?
  endDate     DateTime?
  description String?

  resumeId String
  resume   Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("work_experiences")
}

model Education {
  id String @id @default(cuid())

  degree    String?
  school    String?
  startDate DateTime?
  endDate   DateTime?

  resumeId String
  resume   Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("educations")
}

model CandidateJobMatch {
  id            String   @id @default(cuid())
  candidateId   String
  jobId         String
  score         Float    // AI matching score 0-100
  reasoning     String?  // AI explanation of the match
  keyMatches    String[] // Array of key matching points
  gaps          String[] // Array of identified gaps
  recommendations String[] // Array of recommendations
  matchedAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  
  // Relations
  candidate     Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  job           Job       @relation(fields: [jobId], references: [id], onDelete: Cascade)
  
  // Ensure one match record per candidate-job pair
  @@unique([candidateId, jobId])
  @@map("candidate_job_matches")
}
